    {
      "source": "src/apps/web-programming/functions",
      "codebase": "web-programming",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": []
    },
    {
      "source": "src/apps/csn-journal/functions",
      "codebase": "csn-journal",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": []
    }
  ],
  "storage": {
    "rules": "storage.rules"
