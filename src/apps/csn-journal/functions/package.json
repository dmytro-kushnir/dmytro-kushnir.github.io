{
  "name": "csn-journal-functions",
  "description": "Cloud Functions for the CSN Journal app",
  "type": "module",
  "dependencies": {
    "firebase-admin": "^12.4",
    "firebase-functions": "^5.1"
  },
  "devDependencies": {
    "typescript": "^5.0",
    "npm-run-all": "^4.1",
    "firebase-tools": "^13.16"
  },
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:main": "npm --prefix ../../../../ run dev",
    "emulate:system": "firebase emulators:start --only functions,firestore,storage",
    "dev:emulate:system": "npm-run-all --parallel dev:main dev emulate:system",
    "deploy:functions": "tsc && firebase deploy --only functions"
  }
}
